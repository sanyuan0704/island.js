{
  "name": "islandjs-monorepo",
  "private": true,
  "version": "0.0.0",
  "description": "Vite & Islands architecture SSG framework",
  "packageManager": "pnpm@7.9.2",
  "type": "module",
  "main": "dist/node/index.cjs",
  "module": "dist/node/index.js",
  "types": "dist/node/index.d.ts",
  "bin": {
    "island": "./bin/island.js"
  },
  "scripts": {
    "pnpm-install": "pnpm install",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx --cache ./",
    "lint:fix": "eslint --fix --ext .js,.jsx,.ts,.tsx --quiet --cache ./",
    "test": "vitest run",
    "e2e:test": "playwright test",
    "e2e:prepare": "tsx ./packages/island/scripts/prepare-e2e.cts",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "prepare": "husky install",
    "dev:docs": "island dev docs",
    "build:docs": "island build docs && cp -r ./docs/.island/index.html ./docs/.island/dist",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "change": "changeset",
    "version": "changeset version",
    "publish": "changeset publish"
  },
  "keywords": [
    "vite",
    "ssg",
    "island architecture",
    "docs",
    "framework"
  ],
  "author": "Sanyuan0704",
  "license": "MIT",
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.7",
    "@changesets/cli": "^2.25.1",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@islandjs/plugin-check-links": "workspace:*",
    "@playwright/test": "^1.26.1",
    "@types/node": "^18.11.7",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "commitlint": "^17.1.2",
    "conventional-changelog-cli": "^2.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "execa": "^6.1.0",
    "globby": "^13.1.2",
    "husky": "^8.0.1",
    "islandjs": "workspace:*",
    "lint-staged": "^13.0.3",
    "pnpm": "7.9.2",
    "prettier": "^2.7.1",
    "rollup": "^2.78.1",
    "serve": "^14.0.1",
    "tsup": "^6.2.3",
    "tsx": "^3.8.2",
    "turbo": "^1.6.2",
    "typescript": "^4.7.4",
    "vitest": "^0.23.1"
  },
  "lint-staged": {
    "**/*.{js,jsx,tsx,ts,json}": [
      "eslint --fix"
    ]
  }
}
