{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "baseUrl": "src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
    "paths": {
      "@runtime": ["runtime/index.ts"],
      "@shared/*": ["shared/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/playground/**",
    "tsup.config.ts"
  ]
}
